<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart - EcoSwap</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f0f8f4 !important;
        }
        .cart-item {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }
        .cart-item img {
            margin-right: 15px;
        }
        .cart-item .item-details {
            flex-grow: 1;
        }
        .cart-item .item-actions {
            display: flex;
            align-items: center;
        }
        .cart-item .item-actions button {
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <!-- Include the navbar partial -->
    <%- include('partial/navbar') %>
    
    <div class="container mt-5">
        <h1>Your Cart</h1>
        <% if (cart && cart.length > 0) { %>
            <ul class="list-group">
                <% cart.forEach(item => { %>
                    <li class="list-group-item cart-item">
                        <img src="<%= item.image %>" alt="<%= item.name %>" class="img-thumbnail" width="100">
                        <div class="item-details">
                            <h5><%= item.name %></h5>
                            <p><%= item.description %></p>
                        </div>
                        <div class="item-actions">
                            <form action="/cart/remove/<%= item.itemID %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger">Remove</button>
                            </form>
                        </div>
                    </li>
                <% }); %>
            </ul>
            <div class="mt-4">
                <a href="/checkout" class="btn btn-success btn-lg btn-block">Proceed to Payment</a>
            </div>
        <% } else { %>
            <p>Your cart is empty.</p>
        <% } %>
    </div>
</body>
</html>
